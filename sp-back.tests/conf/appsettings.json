{
  "AppSettings": {
    "Database": {
      "ConnectionString": "Server=.;Database=VehicleAuctions;Trusted_Connection=True;",
      "CommandTimeout": 30
    },
    "Logging": {
      "ErrorLogPath": "logs/errors.log",
      "AuctionLogPath": "logs/auctions.log",
      "MaxFileSizeInMb": 10,
      "IncludeStackTrace": true
    },
    "Auction": {
      "AuctionProcessingIntervalInSeconds": 60
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
